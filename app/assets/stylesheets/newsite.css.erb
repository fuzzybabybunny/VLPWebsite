/*
 *  hsla(   0,   0.0%, 100.0%, 1 )   white
 *  hsla(   0,   0.0%,  13.3%, 1 )   dark gray
 *  hsla(   0,   0.0%,  60.0%, 1 )   medium gray
 *  hsla(   0,   0.0%,  80.0%, 1 )   light gray
 *  hsla(   2,  64.7%,  50.0%, 1 )   red
 *  hsla(  40,  64.7%,  50.0%, 1 )   yellow
 *  hsla( 120,  39.6%,  46.0%, 1 )   green
 *  hsla( 208,  55.9%,  44.5%, 1 )   blue
 */

.orange {
  color: hsla(24, 100%, 30%, 1);
}

.white {
  color: hsla(   0,   0.0%, 100.0%, 1 );
}

.dark-gray {
  color: hsla(   0,   0.0%,  13.3%, 1 );   /* dark gray */
}

html, body {
  height: 100%;
  background-image: url(<%= asset_path 'bg-images/bg1.jpg' %>);
  background-size: 1900px;
  font-family: 'Spinnaker', sans-serif;
  font-size: 100%;
  color: hsla(   0,   0.0%, 100.0%, 1 );
 }

#content {
  width:1000px;
  padding-left:32px;
  padding-right:32px;
  padding-top:60px;
  margin-left: auto;
  margin-right: auto;
  margin-top: 100px;
  background-color: hsla(0, 0.0%, 0.0%, 0.7);
  font-size: 90%;
}

/* Wrapper for page content to push down footer */
#wrap {
  min-height: 100%;
  height: auto !important;
  height: 100%;
  /* Negative indent footer by it's height */
  margin: 0 auto -45px;
}

.navbar .container {
  width: auto;
  padding: 0;
}

#top-nav {
  height: 100px;
  text-align: center;
  padding-top: 35px;
  background-color: hsla(   0,   0.0%,  0.0%, 0.7 ) ; /*dark gray*/
}

.nav-links {
  margin-left: 20px;
  margin-right: 20px;
  font-family: 'Spinnaker', sans-serif;
  font-size: 130%;
}

.navbar a {
  text-decoration: none;
  color: hsla(   0,   0.0%, 100.0%, 1 );
  text-shadow: 0px 1px 0px hsla(   0,   0.0%, 100.0%, 0.5 );
}

.navbar a:hover {
  text-decoration: none;
  color: hsla(   0,   0.0%, 100.0%, 1 );
  text-shadow: 0px 1px 0px hsla(   0,   0.0%, 100.0%, 1 );
}

.form-group {
  color: black;
}

.dropdown-form {
  margin-bottom: 15px;
}

#push {
  height: 45px;
}

.signature {
  padding-bottom: 10px;
  padding-left: 25px;
}

#footer {
  height: 45px;
  padding-top: 10px;
}

#footer {
  text-align: center;
/*  padding-top: 5px;*/
  background-color: hsla(   0,   0.0%,  13.3%, 0.7 ) ;
}

@media (max-width: 2000px) {
  #footer {
    margin-left: -20px;
    margin-right: -20px;
    padding-left: 20px;
    padding-right: 20px;
  }
}

#footer a {
  text-decoration: none;
  color: hsla(   0,   0.0%, 100.0%, 1 );
  text-shadow: 0px 1px 0px hsla(   0,   0.0%, 100.0%, 0.5 );
}

#footer a:hover {
  text-decoration: none;
  color: hsla(   0,   0.0%, 100.0%, 1 );
  text-shadow: 0px 1px 0px hsla(   0,   0.0%, 100.0%, 1 );
}

.footer-spacing {
  margin-left: 20px;
  margin-right: 20px;
  font-family: 'Spinnaker', sans-serif;
  font-size: 100%;
}

code {
  font-size: 80%;
}