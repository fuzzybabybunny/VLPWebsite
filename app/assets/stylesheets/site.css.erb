/*
 *  hsla(   0,   0.0%, 100.0%, 1 )   white
 *  hsla(   0,   0.0%,  13.3%, 1 )   dark gray
 *  hsla(   0,   0.0%,  60.0%, 1 )   medium gray
 *  hsla(   0,   0.0%,  80.0%, 1 )   light gray
 *  hsla(   2,  64.7%,  50.0%, 1 )   red
 *  hsla(  40,  64.7%,  50.0%, 1 )   yellow
 *  hsla( 120,  39.6%,  46.0%, 1 )   green
 *  hsla( 208,  55.9%,  44.5%, 1 )   blue
 */

 /*Colors*/

.orange {
  color: hsla(24, 100%, 30%, 1);
}

.white {
  color: hsla(   0,   0.0%, 100.0%, 1 );
}

.dark-gray {
  color: hsla(   0,   0.0%,  13.3%, 1 );   /* dark gray */
}

/*Main*/

html, body {
  height: 100%;
  background-image: url(<%= asset_path 'bg-images/bg_gradient-2.png' %>), url(<%= asset_path 'bg-images/bg1.jpg' %>) ;
  background-size: 1900px;
  font-family: 'Spinnaker', sans-serif;
  font-size: 100%;
  color: hsla(   0,   0.0%, 100.0%, 1 );
 }

.center {
  text-align: center;
}

.container {
  padding-top: 110px;
}

#content {
  width:1000px;
  padding-left:32px;
  padding-right:32px;
  padding-top:0px;
  margin-left: auto;
  margin-right: auto;
  margin-top: 0px;
  font-size: 90%;
}

.header {
  background-image: url(<%= asset_path 'header_images/banner1.jpg' %>);
  height: 250px;
  max-width: 100%;
}

/* Wrapper for page content to push down footer */
#wrap {
  min-height: 100%;
  height: auto !important;
  height: 100%;
  /* Negative indent footer by it's height */
  margin: 0 auto -45px;
}

/*Navigation Bar*/

.navbar .container {
  width: auto;
}

#top-nav {
  text-align: center;
  width:100%;
}

.resize {
  height:100px;
  background-color: hsla(   0,   0.0%,  0.0%, 0.7 ) ; /*dark gray*/
  color: #fff;
  top:0;
  left:0;
  font-family: 'Spinnaker', sans-serif;
  font-size: 100%;
  padding-top: 35px;
  transition: all 0.2s ease-in-out;
}
.resize.tiny {
  height:40px;
  background-color: hsla(   0,   0.0%,  0.0%, 1 ) ; /*black*/
  font-family: 'Spinnaker', sans-serif;
  font-size: 85%;
  padding-top: 10px;
}

.nav-links {
  margin-left: 20px;
  margin-right: 20px;
}

.navbar a {
  text-decoration: none;
  color: hsla(   0,   0.0%, 100.0%, 1 );
  text-shadow: 0px 1px 0px hsla(   0,   0.0%, 100.0%, 0.5 );
}

.navbar a:hover {
  text-decoration: none;
  color: hsla(   0,   0.0%, 100.0%, 1 );
  text-shadow: 0px 1px 0px hsla(   0,   0.0%, 100.0%, 1 );
}

/*Forms*/

legend {
  color: white;
}

.form-group {
  color: black;
}

.form-container {
  width: 100%;
  height: 750px;
}

#login {
  width: 400px;
}

#order-form {
  width: 400px;
}

.dropdown-form {
  margin-bottom: 15px;
}

#push {
  height: 45px;
}

/*Table Styles*/

.table-property-address {
  width: 200px;
}

.table-actions {
  width: 200px;
}

.signature {
  padding-bottom: 10px;
  padding-left: 25px;
}

/*Footer*/

#footer {
  height: 45px;
  margin-top: 40px;
  padding-top: 10px;
}

#footer {
  text-align: center;
/*  padding-top: 5px;*/
  background-color: hsla(   0,   0.0%,  13.3%, 0.7 ) ;
}

.footer-container {

}

@media (max-width: 2000px) {
  #footer {
    margin-left: -20px;
    margin-right: -20px;
    padding-left: 20px;
    padding-right: 20px;
  }
}

#footer a {
  text-decoration: none;
  color: hsla(   0,   0.0%, 100.0%, 1 );
  text-shadow: 0px 1px 0px hsla(   0,   0.0%, 100.0%, 0.5 );
}

#footer a:hover {
  text-decoration: none;
  color: hsla(   0,   0.0%, 100.0%, 1 );
  text-shadow: 0px 1px 0px hsla(   0,   0.0%, 100.0%, 1 );
}

.footer-spacing {
  margin-left: 20px;
  margin-right: 20px;
  font-family: 'Spinnaker', sans-serif;
  font-size: 100%;
}

code {
  font-size: 80%;
}