
#content
  = form_for :user, url: login_url, html: { id: "loginform" } do |f|
    fieldset
      legend Please input your email and password to register.
      / .form-group = flash.map {| key, value| "#{key.capitalize}: #{value}"}.join(";")
      .form-group
        = f.label :email, class: "sr-only"
        = f.text_field :email, class: "form-control", placeholder: "Email address"
      .form-group
        = f.label :password, class: "sr-only"
        = f.password_field :password, class: "form-control", placeholder: "Password"
      .form-group
        = f.submit "Sign in", class: "btn btn-success"